{
  "app-id": "com.github.alexkdeveloper.web-app-creator",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "com.github.alexkdeveloper.web-app-creator",
  "finish-args": [
     "--device=dri",
     "--share=ipc",
     "--socket=fallback-x11",
     "--socket=wayland",
     "--filesystem=~/.local/share/applications"
  ],
  "cleanup": [
     "/include",
     "/lib/pkgconfig",
     "/man",
     "/share/doc",
     "/share/gtk-doc",
     "/share/man",
     "/share/pkgconfig",
     "/share/vala",
     "*.la",
     "*.a"
  ],
  "modules": [
        {
        "name": "Web App Creator",
        "buildsystem": "meson",
        "sources": [
            {
                "type": "dir",
                "path": "."
            }
        ]
      }
  ]
}
